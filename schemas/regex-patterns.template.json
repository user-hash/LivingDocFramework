{
  "version": "1.0.0",
  "description": "Centralized regex patterns for code analysis. Customize for your conventions.",
  "patterns": {
    "invariant_ref": "INV-[A-Z]+\\.\\d+",
    "pattern_ref": "PATTERN-\\d{3}",
    "bug_ref": "(BUG|ISSUE|GH)-\\d+",
    "version_comment": "//\\s*v(\\d+\\.\\d+\\.?\\d*)",
    "class_declaration": "class\\s+(\\w+)",
    "interface_declaration": "interface\\s+(I?\\w+)",
    "import_statement": "import\\s+([\\w.]+)",
    "test_file": "([A-Za-z][a-zA-Z0-9]+)Tests?\\.\\w+$",
    "file_reference": "\\b([A-Z][a-zA-Z0-9]+\\.\\w+)\\b"
  }
}
