{
  "version": "1.0.0",
  "description": "Node type definitions for semantic graph. Customize for your project.",
  "node_types": [
    {
      "id": "file",
      "label": "Files",
      "color": "#4a9eff",
      "discovery": { "method": "glob", "patterns": ["**/*.cs", "**/*.py", "**/*.ts"] },
      "enabled": true
    },
    {
      "id": "bug",
      "label": "Bugs",
      "color": "#ff6b6b",
      "discovery": { "method": "json", "source": "bugs.json" },
      "enabled": true
    },
    {
      "id": "invariant",
      "label": "Invariants",
      "color": "#00d2d3",
      "discovery": { "method": "markdown", "path": "docs/invariants/" },
      "enabled": true
    },
    {
      "id": "pattern",
      "label": "Patterns",
      "color": "#ff9f43",
      "discovery": { "method": "markdown", "path": "docs/patterns/" },
      "enabled": true
    },
    {
      "id": "test",
      "label": "Tests",
      "color": "#88ff88",
      "discovery": { "method": "glob", "patterns": ["**/*Test*.cs", "**/*_test.py"] },
      "enabled": true
    }
  ]
}
